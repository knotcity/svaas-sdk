{
    "compilerOptions": {
      "module": "CommonJS",
      "target": "ES2018",
      "noImplicitAny": true,
      "strictNullChecks": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "esModuleInterop": true,
      "baseUrl": ".",
      "paths": {
        "*": [
          "node_modules/*"
        ]
      },
      "verbatimModuleSyntax": false // TODO: when the module is full ESM change this to true
    },
    "include": [
      "src/**/*"
    ]
  }
